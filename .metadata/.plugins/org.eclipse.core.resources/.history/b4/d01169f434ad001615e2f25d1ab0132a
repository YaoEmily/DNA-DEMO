package com.jiuqi.xuheyao.dna.demo.ui;

import java.awt.GridLayout;

import com.jiuqi.dna.ui.custom.combo.DatePicker;
import com.jiuqi.dna.ui.wt.widgets.Composite;
import com.jiuqi.dna.ui.wt.widgets.Label;
import com.jiuqi.dna.ui.wt.widgets.Page;
import com.jiuqi.dna.ui.wt.widgets.Text;

public class EditPersonPage extends Page{

	public EditPersonPage(Composite parent) {
		super(parent);
		this.setLayout(new GridLayout(2));
		
		new Label(this).setText("姓名");
		Text txtName = new Text(this);
		new Label(this).setText("年龄");
		
		new Label(this).setText("性别");
		
		new Label(this).setText("入职日期");
		DatePicker dp = new DatePicker(this);
		new Label(this).setText("所属部门");
		
		new Label(this).setText("备注");
	}

}
